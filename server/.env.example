# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@postgres:5432/brx_db

# JWT Configuration
JWT_SECRET=change-this-to-random-secret-min-32-characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://brx.ma

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@brx.ma

# Application URL (for email links)
APP_URL=https://brx.ma

# Session/Cookie Configuration
COOKIE_SECRET=change-this-to-random-secret-min-32-characters

# Casablanca Bourse API (if available)
BOURSE_API_URL=https://www.casablanca-bourse.com
BOURSE_API_KEY=

# Redis (optional, for cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Cron Jobs (format: minute hour day month weekday)
CRON_UPDATE_STOCKS=*/5 * * * *
CRON_UPDATE_HISTORY=0 18 * * 1-5
